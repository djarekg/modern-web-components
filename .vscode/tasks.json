{
  "tasks": [
    {
      "type": "shell",
      "label": "dev",
      "osx": {
        "options": {
          "cwd": "${workspaceFolder}/apps/demo"
        }
      },
      "command": "task",
      "args": ["dev:debug"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "listening on http://localhost:3000"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting development server",
          "endsPattern": "Compiled successfully"
        }
      }
    },
    {
      "type": "shell",
      "label": "terminate-dev",
      "command": "pkill",
      "args": ["-f", "task dev:debug"],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ]
}
